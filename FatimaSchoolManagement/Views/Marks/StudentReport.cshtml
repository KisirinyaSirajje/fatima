@model FatimaSchoolManagement.Models.ViewModels.StudentReportViewModel

@{
    ViewData["Title"] = "Student Report Card";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Student Report Card</h1>
        <div>
            <button onclick="window.print()" class="btn btn-primary">
                <i class="fas fa-print fa-sm text-white-50"></i> Print Report
            </button>
            <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.Student.StudentId" class="btn btn-secondary">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Student
            </a>
        </div>
    </div>

    <!-- Report Card -->
    <div class="card shadow mb-4" id="reportCard">
        <div class="card-header py-3 text-center bg-primary text-white">
            <h2 class="m-0 font-weight-bold">Our Lady of Fatima Secondary School</h2>
            <h5 class="m-0">Student Report Card</h5>
            <p class="m-0">Academic Year @Model.AcademicYear - @Model.Term.ToString().Replace("Term", "Term ")</p>
        </div>
        <div class="card-body">
            <!-- Student Information -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <table class="table table-borderless">
                        <tr>
                            <td width="150"><strong>Student Name:</strong></td>
                            <td>@Model.Student.FullName</td>
                            <td width="150"><strong>Student Number:</strong></td>
                            <td>@Model.Student.StudentNumber</td>
                        </tr>
                        <tr>
                            <td><strong>Class:</strong></td>
                            <td>@Model.Class.ClassName</td>
                            <td><strong>Level:</strong></td>
                            <td>@(Model.Student.Level == FatimaSchoolManagement.Models.EducationLevel.OLevel ? "O-Level" : "A-Level")</td>
                        </tr>
                        <tr>
                            <td><strong>Date of Birth:</strong></td>
                            <td>@Model.Student.DateOfBirth.ToString("dd/MM/yyyy")</td>
                            <td><strong>Age:</strong></td>
                            <td>@Model.Student.Age years</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Student.PhotoPath))
                    {
                        <img src="@Model.Student.PhotoPath" alt="@Model.Student.FullName" class="img-fluid rounded" style="max-height: 120px;" />
                    }
                    else
                    {
                        <div class="bg-light p-3 rounded">
                            <i class="fas fa-user fa-3x text-gray-300"></i>
                        </div>
                    }
                </div>
            </div>

            <!-- Academic Performance -->
            <div class="row mb-4">
                <div class="col-12">
                    <h5 class="font-weight-bold text-primary mb-3">Academic Performance</h5>
                    @if (Model.SubjectMarks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Subject Code</th>
                                        <th>Subject Name</th>
                                        <th class="text-center">BOT<br/><small>(10%)</small></th>
                                        <th class="text-center">MOT<br/><small>(20%)</small></th>
                                        <th class="text-center">EOT<br/><small>(70%)</small></th>
                                        <th class="text-center">Final Mark</th>
                                        <th class="text-center">Grade</th>
                                        <th>Grade Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subject in Model.SubjectMarks)
                                    {
                                        <tr>
                                            <td>@subject.SubjectCode</td>
                                            <td>@subject.SubjectName</td>
                                            <td class="text-center">@(subject.BOTMark?.ToString("F1") ?? "-")</td>
                                            <td class="text-center">@(subject.MOTMark?.ToString("F1") ?? "-")</td>
                                            <td class="text-center">@(subject.EOTMark?.ToString("F1") ?? "-")</td>
                                            <td class="text-center">
                                                @if (subject.BOTMark.HasValue && subject.MOTMark.HasValue && subject.EOTMark.HasValue)
                                                {
                                                    <strong>@($"{subject.FinalMark.ToString("F1")} ({subject.OLevelPoints.ToString("F2")})")</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Incomplete</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (subject.BOTMark.HasValue && subject.MOTMark.HasValue && subject.EOTMark.HasValue)
                                                {
                                                    <span class="badge badge-@GetGradeBadgeColor(subject.Grade) badge-lg">@subject.Grade</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@subject.GradeDescription</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="bg-light">
                                    <tr>
                                        <td colspan="5" class="text-right"><strong>TOTALS:</strong></td>
                                        <td class="text-center"><strong>@Model.TotalMarks.ToString("F1")</strong></td>
                                        <td colspan="2"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="5" class="text-right"><strong>AVERAGE:</strong></td>
                                        <td class="text-center"><strong>@Model.AverageMark.ToString("F1")</strong></td>
                                        <td class="text-center">
                                            <span class="badge badge-@GetGradeBadgeColor(Model.OverallGrade) badge-lg">@Model.OverallGrade</span>
                                        </td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No marks available for this term.
                        </div>
                    }
                </div>
            </div>

            <!-- Performance Summary -->
            @if (Model.SubjectMarks.Any(s => s.BOTMark.HasValue && s.MOTMark.HasValue && s.EOTMark.HasValue))
            {
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card border-left-primary">
                            <div class="card-body">
                                <h6 class="font-weight-bold text-primary">Class Performance</h6>
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td>Position in Class:</td>
                                        <td><strong>@(Model.ClassPosition?.ToString() ?? "N/A") out of @Model.TotalStudents</strong></td>
                                    </tr>
                                    <tr>
                                        <td>Overall Grade:</td>
                                        <td><span class="badge badge-@GetGradeBadgeColor(Model.OverallGrade)">@Model.OverallGrade</span></td>
                                    </tr>
                                    <tr>
                                        <td>Average Mark:</td>
                                        <td><strong>@Model.AverageMark.ToString("F1")%</strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-left-info">
                            <div class="card-body">
                                <h6 class="font-weight-bold text-info">Grade Scale (CBC System)</h6>
                                <table class="table table-sm table-borderless">
                                    <tr><td><span class="badge badge-success">A</span></td><td>80-100: Exceptional Achievement</td></tr>
                                    <tr><td><span class="badge badge-primary">B</span></td><td>70-79: Outstanding Performance</td></tr>
                                    <tr><td><span class="badge badge-info">C</span></td><td>60-69: Satisfactory Performance</td></tr>
                                    <tr><td><span class="badge badge-warning">D</span></td><td>50-59: Basic Understanding</td></tr>
                                    <tr><td><span class="badge badge-danger">E</span></td><td>0-49: Elementary Understanding</td></tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Comments Section -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold">Class Teacher's Comments</h6>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.TeacherComments))
                            {
                                <p>@Model.TeacherComments</p>
                            }
                            else
                            {
                                <p class="text-muted">No comments provided.</p>
                            }
                            <div class="mt-3">
                                <strong>Signature:</strong> _____________________
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold">Head Teacher's Comments</h6>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(Model.HeadTeacherComments))
                            {
                                <p>@Model.HeadTeacherComments</p>
                            }
                            else
                            {
                                <p class="text-muted">No comments provided.</p>
                            }
                            <div class="mt-3">
                                <strong>Signature:</strong> _____________________
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="row">
                <div class="col-12">
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Report Generated:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                </div>
                                <div class="col-md-6 text-right">
                                    @if (Model.NextTermBegins.HasValue)
                                    {
                                        <strong>Next Term Begins:</strong> @Model.NextTermBegins.Value.ToString("dd/MM/yyyy")
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetGradeBadgeColor(string grade)
    {
        return grade switch
        {
            "A" => "success",
            "B" => "primary",
            "C" => "info",
            "D" => "warning",
            "E" => "danger",
            _ => "secondary"
        };
    }
}

@section Styles {
    <style>
        @@media print {
            .btn, .navbar, .sidebar, .card-header .btn {
                display: none !important;
            }
            
            .card {
                border: none !important;
                box-shadow: none !important;
            }
            
            .container-fluid {
                margin: 0 !important;
                padding: 0 !important;
            }
            
            body {
                background: white !important;
            }
        }
        
        .badge-lg {
            font-size: 0.9em;
            padding: 0.5em 0.75em;
        }
    </style>
}