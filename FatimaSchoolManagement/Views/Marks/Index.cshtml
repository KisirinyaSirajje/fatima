@model IEnumerable<FatimaSchoolManagement.Models.Mark>
@{
    ViewData["Title"] = "Marks Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-line"></i> Marks Management</h2>
        <div>
            <a asp-action="ClassEntry" class="btn btn-primary">
                <i class="fas fa-plus"></i> Enter Class Marks
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent Marks Entries</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Subject</th>
                                <th>Term</th>
                                <th>BOT (10%)</th>
                                <th>MOT (20%)</th>
                                <th>EOT (70%)</th>
                                <th>Final Mark</th>
                                <th>Grade</th>
                                <th>Last Modified</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Student.FullName</strong><br>
                                        <small class="text-muted">@item.Student.StudentNumber</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.Class.ClassName</span>
                                    </td>
                                    <td>@item.Subject.SubjectName</td>
                                    <td>
                                        @switch (item.Term)
                                        {
                                            case FatimaSchoolManagement.Models.Term.Term1:
                                                <span class="badge bg-info">Term 1</span>
                                                break;
                                            case FatimaSchoolManagement.Models.Term.Term2:
                                                <span class="badge bg-warning">Term 2</span>
                                                break;
                                            case FatimaSchoolManagement.Models.Term.Term3:
                                                <span class="badge bg-success">Term 3</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (item.BOTMark.HasValue)
                                        {
                                            <span class="text-primary">@item.BOTMark.Value.ToString("F1")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.MOTMark.HasValue)
                                        {
                                            <span class="text-primary">@item.MOTMark.Value.ToString("F1")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.EOTMark.HasValue)
                                        {
                                            <span class="text-primary">@item.EOTMark.Value.ToString("F1")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.HasAllMarks)
                                        {
                                            <strong class="text-success">@item.FinalMark.ToString("F2")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Incomplete</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.HasAllMarks)
                                        {
                                            @switch (item.Grade)
                                            {
                                                case "A":
                                                    <span class="badge bg-success">A</span>
                                                    break;
                                                case "B":
                                                    <span class="badge bg-primary">B</span>
                                                    break;
                                                case "C":
                                                    <span class="badge bg-info">C</span>
                                                    break;
                                                case "D":
                                                    <span class="badge bg-warning">D</span>
                                                    break;
                                                case "E":
                                                    <span class="badge bg-danger">E</span>
                                                    break;
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@item.LastModified.ToString("MMM dd, yyyy")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No marks entered yet</h5>
                    <p class="text-muted">Start by entering marks for a class using the button above.</p>
                </div>
            }
        </div>
    </div>
</div>