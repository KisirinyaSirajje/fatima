@model FatimaSchoolManagement.Models.ViewModels.StudentEditViewModel

@{
    ViewData["Title"] = "Edit Student";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Student</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Students
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Student Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="StudentId" />
                        <input type="hidden" asp-for="CurrentPhotoPath" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="StudentNumber" class="control-label"></label>
                                    <input asp-for="StudentNumber" class="form-control" />
                                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FullName" class="control-label"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth" class="control-label"></label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LINNumber" class="control-label"></label>
                                    <input asp-for="LINNumber" class="form-control" />
                                    <span asp-validation-for="LINNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ParentsContact" class="control-label"></label>
                                    <input asp-for="ParentsContact" class="form-control" type="tel" />
                                    <span asp-validation-for="ParentsContact" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NextOfKin" class="control-label"></label>
                                    <input asp-for="NextOfKin" class="form-control" />
                                    <span asp-validation-for="NextOfKin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NextOfKinContact" class="control-label"></label>
                                    <input asp-for="NextOfKinContact" class="form-control" type="tel" />
                                    <span asp-validation-for="NextOfKinContact" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Level" class="control-label"></label>
                                    <select asp-for="Level" class="form-control" asp-items="Html.GetEnumSelectList<FatimaSchoolManagement.Models.EducationLevel>()">
                                        <option value="">Select Level</option>
                                    </select>
                                    <span asp-validation-for="Level" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClassId" class="control-label"></label>
                                    <select asp-for="ClassId" class="form-control" asp-items="@(new SelectList(Model.AvailableClasses, "ClassId", "ClassName"))">
                                        <option value="">Select Class</option>
                                    </select>
                                    <span asp-validation-for="ClassId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Photo" class="control-label"></label>
                                    <input asp-for="Photo" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.CurrentPhotoPath))
                                    {
                                        <small class="form-text text-muted">Current photo will be replaced if you select a new one.</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Update Student" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.CurrentPhotoPath))
        {
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Current Photo</h6>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.CurrentPhotoPath" alt="Student Photo" class="img-fluid rounded" style="max-height: 200px;" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}