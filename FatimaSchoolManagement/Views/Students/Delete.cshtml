@model FatimaSchoolManagement.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Delete Student</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Students
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4 border-left-danger">
                <div class="card-header py-3 bg-danger text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Warning!</h4>
                        <p>You are about to permanently delete this student record. This action cannot be undone.</p>
                        <hr>
                        <p class="mb-0">All associated marks and records will also be deleted.</p>
                    </div>

                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.PhotoPath))
                        {
                            <div class="col-md-3 text-center">
                                <img src="@Model.PhotoPath" alt="@Model.FullName" class="img-fluid rounded mb-3" style="max-height: 150px;" />
                            </div>
                            <div class="col-md-9">
                                <h3 class="text-danger">@Model.FullName</h3>
                                
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Student Number:</strong></td>
                                        <td>@Model.StudentNumber</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date of Birth:</strong></td>
                                        <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Age:</strong></td>
                                        <td>@Model.Age years</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Level:</strong></td>
                                        <td>
                                            <span class="badge badge-@(Model.Level == FatimaSchoolManagement.Models.EducationLevel.OLevel ? "primary" : "info")">
                                                @(Model.Level == FatimaSchoolManagement.Models.EducationLevel.OLevel ? "O-Level" : "A-Level")
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Class:</strong></td>
                                        <td>@Model.Class.ClassName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>LIN Number:</strong></td>
                                        <td>@(Model.LINNumber ?? "Not provided")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Parents' Contact:</strong></td>
                                        <td>@(Model.ParentsContact ?? "Not provided")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Next of Kin:</strong></td>
                                        <td>@(Model.NextOfKin ?? "Not provided")</td>
                                    </tr>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12">
                                <h3 class="text-danger">@Model.FullName</h3>
                                
                                <table class="table table-borderless">
                                    <tr>
                                        <td><strong>Student Number:</strong></td>
                                        <td>@Model.StudentNumber</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Date of Birth:</strong></td>
                                        <td>@Model.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Age:</strong></td>
                                        <td>@Model.Age years</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Level:</strong></td>
                                        <td>
                                            <span class="badge badge-@(Model.Level == FatimaSchoolManagement.Models.EducationLevel.OLevel ? "primary" : "info")">
                                                @(Model.Level == FatimaSchoolManagement.Models.EducationLevel.OLevel ? "O-Level" : "A-Level")
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Class:</strong></td>
                                        <td>@Model.Class.ClassName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>LIN Number:</strong></td>
                                        <td>@(Model.LINNumber ?? "Not provided")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Parents' Contact:</strong></td>
                                        <td>@(Model.ParentsContact ?? "Not provided")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Next of Kin:</strong></td>
                                        <td>@(Model.NextOfKin ?? "Not provided")</td>
                                    </tr>
                                </table>
                            </div>
                        }
                    </div>

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="StudentId" />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger btn-lg mr-3">
                                <i class="fas fa-trash"></i> Yes, Delete Student
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>