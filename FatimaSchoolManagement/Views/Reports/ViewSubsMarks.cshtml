@model SubsMarkSheetViewModel
@{
    ViewData["Title"] = "SUBS Marks View";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-table"></i> SUBS Marks View</h2>
                <div>
                    <a href="@Url.Action("Subs", "Reports")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Form
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-table"></i>
                Subject Marks for @Model.Class.ClassName - @Model.Term @Model.AcademicYear (@Model.MarkType)
            </h5>
        </div>
        <div class="card-body p-2">
            <div class="table-responsive">
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>Student Number</th>
                            <th>Student Name</th>
                            @foreach (var subject in Model.Subjects)
                            {
                                <th>@subject.SubjectName</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int sn = 1;
                        }
                        @foreach (var studentRow in Model.StudentRows)
                        {
                            <tr>
                                <td>@sn</td>
                                <td>@studentRow.Student.StudentNumber</td>
                                <td>@studentRow.Student.FullName</td>
                                @foreach (var subject in Model.Subjects)
                                {
                                    <td>@(studentRow.SubjectMarks.ContainsKey(subject.SubjectId) ? studentRow.SubjectMarks[subject.SubjectId]?.ToString("F1") ?? "-" : "-")</td>
                                }
                            </tr>
                            sn++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-grid gap-2 mt-3">
                <a href="@Url.Action("ExportSubsToExcel", "Reports", new { classId = Model.Class.ClassId, academicYear = Model.AcademicYear, term = Model.Term, markType = Model.MarkType })" target="_blank" class="btn btn-success">
                    <i class="fas fa-file-excel"></i> Export to Excel
                </a>
            </div>
        </div>
    </div>
</div>
