@model FatimaSchoolManagement.Models.ViewModels.SubjectIndexViewModel
@{
    ViewData["Title"] = "Subject Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="fas fa-book"></i> Subject Management</h2>
                    <p class="text-muted">Manage academic subjects by education level</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Subject
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle"></i> @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">O-Level Subjects</h5>
                                    <h3 class="mb-0">@Model.TotalOLevelSubjects</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-graduation-cap fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">A-Level Subjects</h5>
                                    <h3 class="mb-0">@Model.TotalALevelSubjects</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-university fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-filter"></i> Filters</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="level" class="form-label">Education Level</label>
                                <select name="level" id="level" class="form-select">
                                    <option value="">All Levels</option>
                                    <option value="@((int)EducationLevel.OLevel)" selected="@(Model.SelectedLevel == EducationLevel.OLevel)">O-Level (S1-S4)</option>
                                    <option value="@((int)EducationLevel.ALevel)" selected="@(Model.SelectedLevel == EducationLevel.ALevel)">A-Level (S5-S6)</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="searchTerm" class="form-label">Search</label>
                                <input type="text" name="searchTerm" id="searchTerm" class="form-control" 
                                       placeholder="Search by name, code, or description..." value="@Model.SearchTerm">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="fas fa-search"></i> Filter
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Subjects Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> Subjects 
                        @if (Model.SelectedLevel.HasValue)
                        {
                            <span class="badge bg-secondary">@(Model.SelectedLevel == EducationLevel.OLevel ? "O-Level" : "A-Level")</span>
                        }
                        <span class="badge bg-info">@Model.Subjects.Count subjects</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Subjects.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Code</th>
                                        <th>Subject Name</th>
                                        <th>Level</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th width="200">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subject in Model.Subjects)
                                    {
                                        <tr class="@(subject.IsActive ? "" : "table-warning")">
                                            <td>
                                                <span class="badge bg-dark">@subject.SubjectCode</span>
                                            </td>
                                            <td>
                                                <strong>@subject.SubjectName</strong>
                                            </td>
                                            <td>
                                                <span class="badge @(subject.Level == EducationLevel.OLevel ? "bg-primary" : "bg-success")">
                                                    @subject.LevelDescription
                                                </span>
                                            </td>
                                            <td>
                                                @(subject.Description ?? "No description")
                                            </td>
                                            <td>
                                                @if (subject.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@subject.SubjectId" 
                                                       class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@subject.SubjectId" 
                                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (subject.IsActive)
                                                    {
                                                        <a asp-action="Delete" asp-route-id="@subject.SubjectId" 
                                                           class="btn btn-sm btn-outline-danger" title="Delete/Deactivate">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Activate" asp-route-id="@subject.SubjectId" 
                                                           class="btn btn-sm btn-outline-success" title="Activate">
                                                            <i class="fas fa-check"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <h5>No subjects found</h5>
                            <p class="text-muted">
                                @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SelectedLevel.HasValue)
                                {
                                    <span>No subjects match your search criteria.</span>
                                }
                                else
                                {
                                    <span>Start by adding your first subject.</span>
                                }
                            </p>
                            @if (string.IsNullOrEmpty(Model.SearchTerm) && !Model.SelectedLevel.HasValue)
                            {
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add First Subject
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit form when filter changes
        document.getElementById('level').addEventListener('change', function() {
            this.form.submit();
        });
    </script>
}