@model FatimaSchoolManagement.Models.ViewModels.SubjectDeleteViewModel
@{
    ViewData["Title"] = "Delete Subject";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-trash-alt"></i> Delete Subject</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this subject?
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Subject Code:</dt>
                                <dd class="col-sm-8">@Model.Subject.SubjectCode</dd>
                                
                                <dt class="col-sm-4">Subject Name:</dt>
                                <dd class="col-sm-8">@Model.Subject.SubjectName</dd>
                                
                                <dt class="col-sm-4">Level:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.Subject.Level == EducationLevel.OLevel ? "bg-primary" : "bg-info")">
                                        @(Model.Subject.Level == EducationLevel.OLevel ? "O-Level (S1-S4)" : "A-Level (S5-S6)")
                                    </span>
                                </dd>
                                
                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.Subject.IsActive ? "bg-success" : "bg-secondary")">
                                        @(Model.Subject.IsActive ? "Active" : "Inactive")
                                    </span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrWhiteSpace(Model.Subject.Description))
                            {
                                <h6>Description:</h6>
                                <p>@Model.Subject.Description</p>
                            }
                        </div>
                    </div>

                    @if (Model.HasRelatedMarks)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle"></i>
                            <strong>Note:</strong> This subject has @Model.TotalMarks mark entries associated with it. 
                            Deleting this subject will also delete all related marks. This action cannot be undone.
                            
                            @if (Model.TotalMarks > 0)
                            {
                                <br>
                                <small class="text-muted">
                                    Consider deactivating the subject instead to preserve historical data.
                                </small>
                            }
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input asp-for="Subject.SubjectId" type="hidden" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            
                            <div>
                                @if (Model.Subject.IsActive)
                                {
                                    <a asp-action="Deactivate" asp-route-id="@Model.Subject.SubjectId" 
                                       class="btn btn-warning me-2">
                                        <i class="fas fa-pause"></i> Deactivate Instead
                                    </a>
                                }
                                
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Are you absolutely sure? This action cannot be undone.')">
                                    <i class="fas fa-trash-alt"></i> Delete Permanently
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>