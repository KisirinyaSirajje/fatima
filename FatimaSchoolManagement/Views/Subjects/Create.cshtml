@model FatimaSchoolManagement.Models.ViewModels.SubjectCreateEditViewModel
@{
    ViewData["Title"] = "Create Subject";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-plus-circle"></i> Create New Subject</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Subject.SubjectCode" class="form-label"></label>
                                <input asp-for="Subject.SubjectCode" class="form-control" placeholder="e.g., ENG, MATH, PHYS" />
                                <span asp-validation-for="Subject.SubjectCode" class="text-danger"></span>
                                <small class="form-text text-muted">Short code for the subject (max 10 characters)</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Subject.Level" class="form-label"></label>
                                <select asp-for="Subject.Level" class="form-select">
                                    <option value="">Select Level</option>
                                    @foreach (var level in Model.AvailableLevels)
                                    {
                                        <option value="@level">
                                            @(level == EducationLevel.OLevel ? "O-Level (S1-S4)" : "A-Level (S5-S6)")
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Subject.Level" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject.SubjectName" class="form-label"></label>
                            <input asp-for="Subject.SubjectName" class="form-control" placeholder="e.g., English Language, Mathematics" />
                            <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject.Description" class="form-label"></label>
                            <textarea asp-for="Subject.Description" class="form-control" rows="3" 
                                      placeholder="Brief description of the subject (optional)"></textarea>
                            <span asp-validation-for="Subject.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Subject.IsActive" class="form-check-input" checked />
                                <label asp-for="Subject.IsActive" class="form-check-label">
                                    Subject is active and available for marks entry
                                </label>
                            </div>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-info-circle"></i> Subject Guidelines</h6>
                                <ul class="mb-0 small">
                                    <li><strong>O-Level subjects</strong> will be available for classes S1, S2, S3, and S4</li>
                                    <li><strong>A-Level subjects</strong> will be available for classes S5 and S6</li>
                                    <li>Subject codes should be unique and descriptive</li>
                                    <li>Students can only access subjects matching their education level</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Subject
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}